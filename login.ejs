<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <div class="w-full min-h-screen flex items-center justify-center p-10">
    <div class="max-w-md w-full bg-zinc-800 p-8 rounded-lg shadow-lg">
      <h3 class="text-3xl text-center mb-5">Login to Your Account</h3>
      
      <form action="/login" method="post">
        <!-- Email Field -->
        <div class="mb-4">
          <label for="email" class="block text-lg mb-2">Email</label>
          <input 
            class="w-full px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-600 text-white focus:border-blue-500" 
            type="email" 
            id="email" 
            name="email" 
            placeholder="Enter your email" 
            required 
          />
        </div>
        
        <!-- Password Field -->
        <div class="mb-6">
          <label for="password" class="block text-lg mb-2">Password</label>
          <input 
            class="w-full px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-600 text-white focus:border-blue-500" 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Enter your password" 
            required 
          />
        </div>
        <input class ="px-5 py-2 rounded-md bg-blue-500" type="submit" value="login"></div>
        <!-- Login Button -->
       
      </form>
    </div>
  </div>

</body>
</html>
